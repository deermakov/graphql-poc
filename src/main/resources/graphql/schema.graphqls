interface Pledge {
    id: ID!
    description: String!
}

type Car implements Pledge {
    id: ID!
    description: String!
    vin: String!
}

type House implements Pledge{
    id: ID!
    description: String!
    cadaster: String!
}

# ---------------------------------

type Deal {
    id: ID!
    num: String!
    sum: Float
    participants: [LegalEntity]
}

type LegalEntity {
    id: ID!
    inn: String
    name: String
    deal: Deal
}

input LegalEntityInput {
    id: ID
    inn: String
    name: String
    deal: DealInput
}

input DealInput {
    id: ID
    num: String
    sum: Float
    participants: [LegalEntityInput]
}

# The Root Query for the application
type Query {
    getAllPledges: [Pledge]

    getAllDeals: [Deal]!
    getDealsByNumOrSum(num: String, sum: Float): [Deal]!
    getAllLegalEntities: [LegalEntity]!
}

# The Root Mutation for the application
type Mutation {
    writeDeal(deal: DealInput) : Deal!
    writeLegalEntity(legalEntity: LegalEntityInput) : LegalEntity!
}